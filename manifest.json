{
  "manifest_version": 3,
  "name": "YouTube Thumbnail Downloader",
  "version": "1.0",
  "description": "Download YouTube video thumbnails easily.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/yt16.png",
      "48": "icons/yt48.png",
      "128": "icons/yt128.png"
    }
  },
  "host_permissions": ["https://www.youtube.com/*"]
}
